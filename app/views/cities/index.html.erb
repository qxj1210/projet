<table class="table table-bordered">
<h1>Listing cities</h1>

  <thead>
    <tr>
      <th>Name</th>
      <th>Lat</th>
      <th>Lon</th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.lat %></td>
        <td><%= city.lon %></td>
        <td><%= link_to 'Show', city,class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_city_path(city),class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New City', new_city_path,class: 'btn btn-info' %>
